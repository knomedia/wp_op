#!/usr/bin/env ruby

require 'wp_op'

class CLBulkConverter

  def build(xml, output)
    @xml = xml
    @output = output
    build_dependencies
    import_files
    write_posts
    download_attachments
  end

  def build_dependencies
    @logger = Logger.new
    @importer = Importer.new( @logger )
    @writer = PostWriter.new
  end

  def import_files
    @logger.notify "Loading posts from #{@xml}\n"
    @importer.parse_wordpress @xml
  end

  def write_posts
    @writer.write_files @importer.posts, @output
  end


  def download_attachments

  end

  def build_dependencies
    @logger = Logger.new
    @importer = Importer.new @logger
    @writer = PostWriter.new @logger
  end

end



wp_xml  = ARGV.shift
output_dir = ARGV.shift || 'source/_posts/'

c = CLBulkConverter.new
c.build wp_xml, output_dir
